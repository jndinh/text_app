<%= form_with scope: :message, url: messages_path, local: true do |form| %>

  <% if @message.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@message.errors.count, "error") %> prohibited
        this message from being saved:
      </h2>
      <ul>
        <% @message.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.text_field :user, required: true, autofocus: true, placeholder: "Name" %>
  </div><br>

  <div class="field">
    <%= form.text_field :number, required: true, autofocus: true, placeholder: "Telephone Number" %>
  </div><br>

  <div class="field">
    <%= form.text_area :text, required: true, autofocus: true, placeholder: "SMS Text" %>
  </div>

  <div class="actions">
    <%= form.submit "Send SMS Text" %>
  </div>

<% end %>
